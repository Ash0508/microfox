#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run package info validation
echo "Running package info validation..."
cd scripts && npm run build && node dist/validatePackageInfo.js

# If the validation script exits with a non-zero status, the commit will be aborted
if [ $? -ne 0 ]; then
  echo "❌ Package info validation failed. Please fix the issues before committing."
  exit 1
fi

echo "✅ Package info validation passed!" 