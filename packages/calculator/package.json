{
  "name": "@microfox/calculator",
  "version": "1.0.0",
  "description": "Microfox calculator tool wrapping mathjs.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microfox-ai/microfox.git"
  },
  "type": "module",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "del dist",
    "test": "run-s test:*",
    "test:lint": "eslint .",
    "test:typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@microfox/core": "*",
    "mathjs": "^13.0.3"
  },
  "peerDependencies": {
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@microfox/tsconfig": "*"
  },
  "publishConfig": {
    "access": "public"
  }
}
