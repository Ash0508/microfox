{
  "name": "@microfox/hacker-news",
  "version": "1.0.2",
  "description": "Microfox SDK for Hacker News.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microfox-ai/microfox.git"
  },
  "type": "module",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "prettier-check": "prettier --check \"./**/*.ts*\""
  },
  "dependencies": {
    "@microfox/core": "*",
    "ky": "^1.7.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@microfox/tsconfig": "*"
  },
  "publishConfig": {
    "access": "public"
  }
}
